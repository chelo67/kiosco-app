---
    import type {Category} from '@/types'
    import {Picture} from 'astro:assets'
    interface Props {
        category: Category
    }
    const {category} = Astro.props
    const currentCategory = () => category.slug === Astro.params.category
---

<div class={`${currentCategory() && 'bg-amber-400'}  flex justify-start items-center gap-4 p-1 border-t border-gray-200 last-of-type::border-b`}>
    <Picture
        src={category.acf.icon}
        alt={`Imagen de Categoria ${category.name}`}
        width={250}
        height={250}
        class={"w-20 min-h-20"}
    />
    <a href={`/order/${category.slug}`} class="text-lg font-bold">{category.name}</a>
</div>